@Composable
fun OpcionBoton(texto: String) {
    Button(
        onClick = { /* acciÃ³n futura */ },
        colors = ButtonDefaults.buttonColors(
            containerColor = Color(0xFF7A3E3E),
            contentColor = Color.White
        ),
        modifier = Modifier
            .width(140.dp)
            .height(60.dp)
    ) {
        Text(texto)
    }
}
