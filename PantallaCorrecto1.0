@Composable
fun PantallaCorrecto() {
    Column(
        modifier = Modifier
            .fillMaxSize()
            .background(Color(0xFFFAD78E))
            .padding(start = 20.dp, end = 20.dp, bottom = 20.dp, top = 30.dp)
